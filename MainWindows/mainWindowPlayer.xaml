<Window x:Class="DataBaseIndTask.mainWindowPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseIndTask"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        WindowState="Normal"
        Width="1600"
        Height="900"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/Start_icon.png"        
        Title="Diverse Desktop">
    <Grid>
        <Button x:Name="buttonExitAccount" 
                Grid.Row="0" 
                Content="Exit account" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Background="Azure" 
                Height="27" 
                Width="110" 
                Panel.ZIndex="1"
                Click="buttonExitAccount_Click" Grid.Column="2"/>
        <materialDesign:Card
            Background="Transparent"
            Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
            Width="100"
            Height="27"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Panel.ZIndex="1" Margin="0,0,110,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="65"/>
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryLightButton}"                          
                    Height="20"
                    Width="20"
                    Background="LightSkyBlue"
                    BorderBrush="SkyBlue"
                    Command="{Binding Path = AccountListVM.AccountList[0].IncreaseBalanceCommand}"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                    <materialDesign:PackIcon                        
                        Kind="Plus"
                        Height="10"
                        Width="10" />
                </Button>
                <TextBlock                    
                    Grid.Column="1"                    
                    FontSize="16"                    
                    Text="{Binding Path = AccountListVM.AccountList[0].account_balance, Mode=TwoWay}">
                    <TextBlock.Background>
                        <ImageBrush/>
                    </TextBlock.Background>
                </TextBlock>
            </Grid>
        </materialDesign:Card>
        <TabControl
            Style="{StaticResource MaterialDesignNavigatilRailTabControl}"            
            materialDesign:ColorZoneAssist.Mode="PrimaryMid"            
            TabStripPlacement="Top"
            Background="White" 
            HorizontalContentAlignment="Center"
            materialDesign:NavigationRailAssist.SelectionCornerRadius="10 10 10 10"
            materialDesign:NavigationRailAssist.ShowSelectionBackground="True" Grid.ColumnSpan="3">
            <!--Store-->
            <TabItem Width="auto">
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="Store"
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Center" />
                        <TextBlock
                              Text="Store"
                              HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <TabControl
                    Style="{StaticResource MaterialDesignNavigatilRailTabControl}"            
                    materialDesign:ColorZoneAssist.Mode="PrimaryMid"            
                    TabStripPlacement="Top"
                    Background="White" 
                    HorizontalContentAlignment="Center"
                    materialDesign:NavigationRailAssist.SelectionCornerRadius="10 10 10 10"
                    materialDesign:NavigationRailAssist.ShowSelectionBackground="True" Grid.ColumnSpan="3">
                    <!--Store-->
                    <TabItem Width="auto">
                        <TabItem.Header>
                            <StackPanel
                                MinWidth="200"
                                Height="auto"
                                Width="auto">
                                <materialDesign:PackIcon
                                    Kind="GoogleController"
                                    Width="24"
                                    Height="24"
                                    HorizontalAlignment="Center" />
                                <TextBlock
                                    Text="Available games"
                                    HorizontalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="400"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Grid.Resources>
                                <SolidColorBrush x:Key="CardColor" Color="PowderBlue"></SolidColorBrush>
                            </Grid.Resources>
                            <materialDesign:ColorZone                                
                                Grid.Row="0"
                                Margin="0 0 0 0"
                                CornerRadius="0 0 0 0"                                 
                                Mode="PrimaryMid"
                                HorizontalAlignment="Stretch"
                                MinWidth="400"  
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Padding="5">
                                <StackPanel                                        
                                    materialDesign:RippleAssist.IsCentered="True">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox
                                            x:Name="StoreComboBox"
                                            FontSize="20"
                                            Grid.Column="0"
                                            Margin="8 0 0 0"
                                            materialDesign:ThemeAssist.Theme="Light"
                                            BorderThickness="0"
                                            ItemsSource="{Binding Path = GameInStoreListVM.searchTypes}"
                                            SelectedIndex="{Binding Path = GameInStoreListVM.searchType}"
                                            Foreground="Black"
                                            materialDesign:ColorZoneAssist.Mode="Standard"
                                            materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesignPaper}"
                                            BorderBrush="{DynamicResource MaterialDesignPaper}" SelectionChanged="ComboBox_SelectionChanged">
                                        </ComboBox>
                                        <materialDesign:ColorZone
                                            x:Name="StoreTextSearch"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="15"
                                            materialDesign:ThemeAssist.Theme="Light"
                                            Padding="8 4 8 4"
                                            CornerRadius="10" 
                                            Visibility="Visible"
                                            Panel.ZIndex="1"                                            
                                            Margin="15 0 15 0"                                             
                                            materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <materialDesign:PackIcon
                                                    Kind="Search"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                                <TextBox
                                                    Grid.Column="1"
                                                    FontSize="20"
                                                    Text="{Binding Path = GameInStoreListVM.filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="8 0 0 0"                                                    
                                                    materialDesign:HintAssist.Hint="Search"
                                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                                    BorderThickness="0"                                                      
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </materialDesign:ColorZone>
                                        <materialDesign:ColorZone
                                            x:Name="StorePriceSearch"
                                            Visibility="Hidden"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="15"
                                            materialDesign:ThemeAssist.Theme="Light"
                                            Padding="8 4 8 4"
                                            CornerRadius="10" 
                                            Panel.ZIndex="1"                                            
                                            Margin="15 0 15 0"                                             
                                            materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <materialDesign:PackIcon
                                                    Grid.Column="0"
                                                    Kind="Search"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                                <TextBox
                                                    Grid.Column="1"
                                                    FontSize="20"
                                                    Text="{Binding Path = GameInStoreListVM.priceFromFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="8 0 0 0"                                                    
                                                    materialDesign:HintAssist.Hint="From"
                                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                                    BorderThickness="0"                                                      
                                                    VerticalAlignment="Center" />
                                                <materialDesign:PackIcon
                                                    Grid.Column="2"
                                                    Kind="Search"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                                <TextBox
                                                    Grid.Column="3"
                                                    FontSize="20"
                                                    Text="{Binding Path = GameInStoreListVM.priceToFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="8 0 0 0"                                                    
                                                    materialDesign:HintAssist.Hint="To"
                                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                                    BorderThickness="0"                                                      
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </materialDesign:ColorZone>
                                    </Grid>
                                </StackPanel>
                            </materialDesign:ColorZone>
                            <Button
                                x:Name="storeBuyButton"
                                Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"
                                ToolTip="Buy It!"                        
                                Grid.Row="2" 
                                Grid.Column="1"    
                                Panel.ZIndex="2"  
                                Height="auto"
                                Width="auto"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"                
                                Command="{Binding Path = GameInStoreListVM.BuyGameCommand}"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                                <Button.Content>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="storeBuyButtonContentTextBlock" Grid.Column="0" HorizontalAlignment="Right" Text="{Binding Path = GameInStoreListVM.SelectedGameInStore.game_price}"/>
                                        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Text="руб."/>
                                    </Grid>
                                </Button.Content>
                            </Button>
                            <DataGrid
                                x:Name="StoreDataGrid"
                                ItemsSource="{Binding Path = GameInStoreListVM.GameInStoreList}"
                                SelectedValue="{Binding Path = GameInStoreListVM.SelectedGameInStore}"
                                CanUserAddRows="False"
                                Background="Transparent"                                
                                Foreground="black"
                                Panel.ZIndex="1"                        
                                Height="auto"
                                Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"
                                AutoGenerateColumns="False"   
                                HeadersVisibility="None" SelectionChanged="StoreDataGrid_SelectionChanged">
                                <DataGrid.Resources>
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Background" Value="LightGray" />
                                    </Style>
                                    <Style TargetType="{x:Type DataGridRow}">
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="{StaticResource CardColor}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style TargetType="{x:Type DataGridCell}">
                                        <Style.Triggers>
                                            <Trigger Property="DataGridCell.IsSelected" Value="True">
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="BorderBrush" Value="Transparent" />
                                            </Trigger>
                                        </Style.Triggers>
                                        <Setter Property="HorizontalAlignment" Value="Left" />
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn                                  
                                        Width="SizeToCells"                                
                                        MinWidth="120">
                                        <DataGridColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="FontSize" Value="20"/>
                                            </Style>
                                        </DataGridColumn.HeaderStyle>                                
                                        <DataGridTemplateColumn.CellTemplate>                                    
                                            <DataTemplate>
                                                <Image 
                                                    Source="{Binding game_storeimage, Mode=OneWay}" 
                                                    MaxHeight="180"
                                                    MaxWidth="320"
                                                    HorizontalAlignment="Stretch"
                                                    Stretch="Fill"
                                                    StretchDirection="Both">                                            
                                                </Image>                                        
                                            </DataTemplate>                                   
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn                                
                                Width="SizeToCells"                                
                                MinWidth="700">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock 
                                                Grid.Row="0" 
                                                FontSize="25"
                                                Foreground="Black" 
                                                VerticalAlignment="Bottom"
                                                Text="{Binding game_name, Mode=OneWay}">                                                
                                            </TextBlock>
                                            <TextBlock 
                                                Grid.Row="1" 
                                                FontSize="20"
                                                Foreground="Black" 
                                                VerticalAlignment="Top"
                                                Text="{Binding game_genre, Mode=OneWay}">
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                                    <DataGridTemplateColumn                                
                                Width="SizeToCells"                                
                                MinWidth="120">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>                                            
                                            <TextBlock                                                 
                                                FontSize="25"
                                                Foreground="Black" 
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right">
                                                <Run Text="{Binding game_price, Mode=OneWay}"/>
                                                <Run Text="руб."/>
                                            </TextBlock>                                            
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                            </DataGrid>
                            <Border 
                                x:Name="storeBorderLeft"
                                BorderBrush="{StaticResource CardColor}"
                                BorderThickness="3" 
                                Grid.Column="1" 
                                Grid.ColumnSpan="3" 
                                Grid.Row="0" 
                                Grid.RowSpan="15"
                                Background="Azure"
                                Panel.ZIndex="1">
                            </Border>
                            <materialDesign:Card
                                x:Name="GameStoreCard"
                                Background="{StaticResource CardColor}"
                                Grid.Row="0"    
                                Grid.RowSpan="2"
                                Grid.Column="2"                        
                                Panel.ZIndex="2"
                                HorizontalAlignment="Stretch"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Margin="0 0 0 0"        
                                Width="auto"      
                                UniformCornerRadius="0"
                                Padding="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="250"/>
                                        <RowDefinition Height="75"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image 
                                        x:Name="gameStoreImage" 
                                        Panel.ZIndex="1"
                                        Grid.Row="0"       
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Stretch="UniformToFill"
                                        StretchDirection="Both"
                                        Margin="5 5 5 5"                        
                                        Source="{Binding Path=GameInStoreListVM.SelectedGameInStore.game_image, Mode=OneWay}">
                                    </Image>
                                    <TextBlock
                                        x:Name="gameNameStoreTextBox"                        
                                        Grid.Row="1"    
                                        Grid.ColumnSpan="2"
                                        Width="auto"
                                        Height="auto"                                
                                        HorizontalAlignment="Left"
                                        Foreground="Black"
                                        FontSize="25"
                                        Background="Transparent"                                
                                        Margin="10 0 0 0"       
                                        Panel.ZIndex="1"
                                        TextWrapping="Wrap"
                                        Text="{Binding Path = GameInStoreListVM.SelectedGameInStore.game_name, Mode=OneWay}">
                                    </TextBlock>
                                    <TextBlock                        
                                        x:Name="gameDescriptionStoreTextBox"                        
                                        Grid.Row="2"    
                                        Grid.ColumnSpan="2"
                                        Width="auto"
                                        Height="auto"                                
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Foreground="Black"
                                        FontSize="12"
                                        Background="Transparent"                                
                                        Margin="10 0 10 0"       
                                        Panel.ZIndex="1"
                                        TextWrapping="Wrap"
                                        Text="{Binding Path = GameInStoreListVM.SelectedGameInStore.game_description, Mode=OneWay}">
                                    </TextBlock>
                                    <TextBlock 
                                        Text="Genre: "
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Foreground="Black">
                                    </TextBlock>
                                    <TextBlock
                                        x:Name="gameGenreStoreTextBlock"
                                        HorizontalAlignment="Right"
                                        Text="{Binding Path = GameInStoreListVM.SelectedGameInStore.game_genre, Mode=OneWay}"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Foreground="Black">
                                    </TextBlock>
                                    <TextBlock 
                                        Text="Release date: "
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Foreground="Black">
                                    </TextBlock>
                                    <TextBlock
                                        x:Name="gameReleaseDateStoreTextBlock"
                                        HorizontalAlignment="Right"                                        
                                        Grid.Row="4"
                                        VerticalAlignment="Center"
                                        Grid.Column="1"
                                        Foreground="Black">
                                        <Run x:Name="gameReleaseDateStoreTextBlockRun1" Text="{Binding Path = GameInStoreListVM.SelectedGameInStore.game_releasedate.Day,Mode=OneWay}"/>
                                        <Run Text="/"/>
                                        <Run x:Name="gameReleaseDateStoreTextBlockRun2" Text="{Binding Path = GameInStoreListVM.SelectedGameInStore.game_releasedate.Month,Mode=OneWay}"/>
                                        <Run Text="/"/>
                                        <Run x:Name="gameReleaseDateStoreTextBlockRun3" Text="{Binding Path = GameInStoreListVM.SelectedGameInStore.game_releasedate.Year,Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock 
                                        Text="Developer: "
                                        Grid.Row="5"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Foreground="Black">
                                    </TextBlock>
                                    <TextBlock
                                        x:Name="gameDeveloperStoreTextBlock"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right"
                                        Text="{Binding Path = GameInStoreListVM.SelectedGameInStore.game_developer, Mode=OneWay}"
                                        Grid.Row="5"
                                        Grid.Column="1"
                                        Foreground="Black">
                                    </TextBlock>
                                    <TextBlock 
                                        Text="Publisher: "
                                        VerticalAlignment="Center"
                                        Grid.Row="6"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        Foreground="Black">
                                    </TextBlock>
                                    <TextBlock
                                        x:Name="gamePublisherStoreTextBlock"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right"
                                        Text="{Binding Path = GameInStoreListVM.SelectedGameInStore.game_publisher, Mode=OneWay}"
                                        Grid.Row="6"
                                        Grid.Column="1"
                                        Foreground="Black">
                                    </TextBlock>
                                    <TextBlock 
                                        Text="Rating (* of 10): "
                                        VerticalAlignment="Center"
                                        Grid.Row="7"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        Foreground="Black">
                                    </TextBlock>
                                    <TextBlock
                                        x:Name="gameRatingStoreTextBlock"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{Binding Path = GameInStoreListVM.SelectedGameInStore.game_rating, Mode=OneWay}"
                                        Grid.Row="7"
                                        Grid.Column="1"
                                        Foreground="Black">
                                    </TextBlock>
                                    <TextBlock 
                                        Text="Age limit: "
                                        Grid.Row="8"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Foreground="Black">
                                    </TextBlock>
                                    <TextBlock
                                        x:Name="gameAgeLimitStoreTextBlock"
                                        HorizontalAlignment="Right"
                                        Text="{Binding Path = GameInStoreListVM.SelectedGameInStore.game_agelimit, Mode=OneWay}"
                                        Grid.Row="8"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Foreground="Black">
                                    </TextBlock>
                                </Grid>
                            </materialDesign:Card>
                        </Grid>
                    </TabItem>
                    <!--Your Purchases-->
                    <TabItem Width="auto">
                        <TabItem.Header>
                            <StackPanel
                                MinWidth="200"
                                Height="auto"
                                Width="auto">
                                <materialDesign:PackIcon
                                    Kind="History"
                                    Width="24"
                                    Height="24"
                                    HorizontalAlignment="Center" />
                                <TextBlock
                                    Text="Your purchases"
                                    HorizontalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <materialDesign:ColorZone                                
                                Grid.Row="0"
                                Margin="0 0 0 0"
                                CornerRadius="0 0 20 20"                                 
                                Mode="PrimaryMid"
                                HorizontalAlignment="Center"
                                MinWidth="400"  
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Padding="5">
                                <StackPanel                                        
                                    materialDesign:RippleAssist.IsCentered="True">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox
                                            x:Name="PurchaseComboBox"
                                            FontSize="20"
                                            Grid.Column="0"
                                            Margin="8 0 0 0"
                                            materialDesign:ThemeAssist.Theme="Light"
                                            BorderThickness="0"
                                            ItemsSource="{Binding Path = GameInLibraryListVM.searchPurchaseTypes}"
                                            SelectedIndex="{Binding Path = GameInLibraryListVM.searchPurchaseType}"
                                            Foreground="Black"
                                            materialDesign:ColorZoneAssist.Mode="Standard"
                                            materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesignPaper}"
                                            BorderBrush="{DynamicResource MaterialDesignPaper}" SelectionChanged="PurchaseComboBox_SelectionChanged">
                                        </ComboBox>
                                        <materialDesign:ColorZone
                                            x:Name="PurchaseTextSearch"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="15"
                                            materialDesign:ThemeAssist.Theme="Light"
                                            Padding="8 4 8 4"
                                            CornerRadius="10" 
                                            Visibility="Visible"
                                            Panel.ZIndex="1"                                            
                                            Margin="15 0 15 0"                                             
                                            materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <materialDesign:PackIcon
                                                    Kind="Search"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                                <TextBox
                                                    Grid.Column="1"
                                                    FontSize="20"
                                                    Text="{Binding Path = GameInLibraryListVM.purchaseFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="8 0 0 0"                                                    
                                                    materialDesign:HintAssist.Hint="Search"
                                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                                    BorderThickness="0"                                                      
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </materialDesign:ColorZone>
                                        <materialDesign:ColorZone
                                            x:Name="PurchasePriceSearch"
                                            Visibility="Hidden"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="15"
                                            materialDesign:ThemeAssist.Theme="Light"
                                            Padding="8 4 8 4"
                                            CornerRadius="10" 
                                            Panel.ZIndex="1"                                            
                                            Margin="15 0 15 0"                                             
                                            materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <materialDesign:PackIcon
                                                    Grid.Column="0"
                                                    Kind="Search"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                                <TextBox
                                                    Grid.Column="1"
                                                    FontSize="20"
                                                    Text="{Binding Path = GameInLibraryListVM.pricePurchaseFromFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="8 0 0 0"                                                    
                                                    materialDesign:HintAssist.Hint="From"
                                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                                    BorderThickness="0"                                                      
                                                    VerticalAlignment="Center" />
                                                <materialDesign:PackIcon
                                                    Grid.Column="2"
                                                    Kind="Search"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                                <TextBox
                                                    Grid.Column="3"
                                                    FontSize="20"
                                                    Text="{Binding Path = GameInLibraryListVM.pricePurchaseToFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="8 0 0 0"                                                    
                                                    materialDesign:HintAssist.Hint="To"
                                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                                    BorderThickness="0"                                                      
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </materialDesign:ColorZone>
                                        <materialDesign:ColorZone
                                            x:Name="PurchaseDateSearch"
                                            Visibility="Hidden"
