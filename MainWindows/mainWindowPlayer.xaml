                                                </Style>
                                                <Style
                                                    TargetType="DatePicker"                       
                                                    BasedOn="{StaticResource MaterialDesignFloatingHintDatePicker}">
                                                    <Setter
                                                        Property="CalendarStyle"
                                                        Value="{StaticResource CustomCalendar}" />
                                                </Style>
                                                <Style
                                                    TargetType="TextBlock">
                                                    <Setter
                                                        Property="Background"
                                                        Value="Azure" />
                                                </Style>
                                            </DatePicker.Resources>
                                        </DatePicker>
                                    </Grid>
                                </materialDesign:ColorZone>
                            </Grid>
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <DataGrid
                        x:Name="ReportDataGrid"
                        ItemsSource="{Binding Path = ReportListVM.ReportList}"
                        SelectedValue="{Binding Path = ReportListVM.SelectedReport}"                        
                        CanUserAddRows="False"
                        Background="Azure"
                        BorderBrush="black"
                        Foreground="black"                        
                        Panel.ZIndex="1"                        
                        Height="auto"
                        Grid.ColumnSpan="2"
                        Grid.Column="1" 
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        AutoGenerateColumns="False"                        
                        HeadersVisibility="All">
                        <DataGrid.Resources>
                            <Style TargetType="ScrollBar">
                                <Setter Property="Background" Value="LightGray" />
                            </Style>                            
                            <Style TargetType="{x:Type DataGridRow}">
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="LightSkyBlue"/>                                        
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Style.Triggers>
                                    <Trigger Property="DataGridCell.IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                    </Trigger>
                                </Style.Triggers>
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>                            
                            <DataGridTextColumn 
                                Header="Report ID"     
                                MinWidth="120"
                                Foreground="Black"                               
                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"
                                Binding="{Binding report_id, Mode=OneWay}">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="Black"/>                                        
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Header="Comment"
                                MinWidth="120"
                                Foreground="Black"
                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"
                                Binding="{Binding report_comment, Mode=OneWay}">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Header="Send date"
                                MinWidth="120"
                                Foreground="Black"
                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"
                                Binding="{Binding report_recievedate, Mode=OneWay}">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Header="Receiver Nickname"
                                MinWidth="120"
                                Foreground="Black"
                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"
                                Binding="{Binding report_receivernickname, Mode=OneWay}">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTextColumn>                            
                            <DataGridTemplateColumn
                                Header="Receiver Avatar"
                                Width="SizeToCells"                                
                                MinWidth="120">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding report_receiverimage, Mode=OneWay}" Height="50" Width="50"></Image>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>                    
                    <Button
                        Style="{StaticResource MaterialDesignOutlinedLightButton}"            
                        Content="Send new report"    
                        IsDefault = "true"
                        IsTabStop="true"
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        Name ="ButtonSendNewReport"
                        Background="Azure"  
                        Command="{Binding Path = ReportListVM.SendNewReportCommand}"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>  
                </Grid>
            </TabItem>            
        </TabControl>
    </Grid>
</Window>