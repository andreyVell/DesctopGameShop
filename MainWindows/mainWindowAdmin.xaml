                                                        Property="Background"
                                                        Value="White" />
                                                    <Setter
                                                        Property="Foreground"
                                                        Value="Black" />
                                                    <Setter
                                                        Property="materialDesign:CalendarAssist.HeaderBackground"
                                                        Value="LightSkyBlue" />
                                                    <Setter
                                                        Property="materialDesign:CalendarAssist.HeaderForeground"
                                                        Value="Black" />
                                                    <Setter
                                                        Property="CalendarDayButtonStyle"
                                                        Value="{StaticResource CustomCalendarDayButton}" />
                                                    <Setter
                                                        Property="CalendarButtonStyle"
                                                        Value="{StaticResource CustomCalendarButton}" />
                                                </Style>
                                                <Style
                                                    TargetType="DatePicker"                       
                                                    BasedOn="{StaticResource MaterialDesignFloatingHintDatePicker}">
                                                    <Setter
                                                        Property="CalendarStyle"
                                                        Value="{StaticResource CustomCalendar}" />
                                                </Style>
                                                <Style
                                                    TargetType="TextBlock">
                                                    <Setter
                                                        Property="Background"
                                                        Value="Azure" />
                                                </Style>
                                            </DatePicker.Resources>
                                        </DatePicker>
                                    </Grid>
                                </materialDesign:ColorZone>
                            </Grid>
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <DataGrid
                        x:Name="ReportsDataGrid"
                        ItemsSource="{Binding Path = ReportListVM.ReportList}"
                        SelectedValue="{Binding Path = ReportListVM.SelectedReport}"                        
                        CanUserAddRows="False"
                        Background="Azure"
                        BorderBrush="black"
                        Foreground="black"                        
                        Panel.ZIndex="1"  
                        Grid.Row="1"
                        Height="auto"
                        SelectionMode="Single"
                        Grid.ColumnSpan="2"                        
                        FrozenColumnCount="1"
                        HorizontalAlignment="Center"
                        AutoGenerateColumns="False"                        
                        HeadersVisibility="All">
                        <DataGrid.Resources>
                            <Style TargetType="ScrollBar">
                                <Setter Property="Background" Value="LightGray" />
                            </Style>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF9CB1B3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Style.Triggers>
                                    <Trigger Property="DataGridCell.IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                    </Trigger>
                                </Style.Triggers>
                                <Setter Property="HorizontalAlignment" Value="Left" />
                            </Style>    
                        </DataGrid.Resources>
                        <DataGrid.Columns>                            
                            <!--report_id-->
                            <DataGridTemplateColumn
                                Header="Report ID"     
                                MinWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            IsReadOnly="true"
                                            Text="{Binding report_id, Mode=OneWay}"
                                            Foreground="Black">
                                        </TextBox>
                                    </DataTemplate>                                       
                                </DataGridTemplateColumn.CellTemplate>                                
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="Foreground" Value="Black"/>                                        
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTemplateColumn>
                            <!--report_senderid-->
                            <DataGridTemplateColumn
                                Header="Sender ID"     
                                MinWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            IsReadOnly="true"
                                            Text="{Binding report_senderid, Mode=OneWay}"
                                            MinWidth="120"
                                            Foreground="Black">
                                        </TextBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTemplateColumn>
                            <!--report_receiverid-->
                            <DataGridTemplateColumn
                                Header="Receiver ID"     
                                MinWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            IsReadOnly="true"
                                            Text="{Binding report_receiverid, Mode=OneWay}"
                                            MinWidth="120"
                                            Foreground="Black">
                                        </TextBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTemplateColumn>
                            <!--report_comment-->
                            <DataGridTemplateColumn
                                Header="Comment"     
                                MinWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            IsReadOnly="true"
                                            TextWrapping="Wrap"
                                            Text="{Binding report_comment, Mode=OneWay}"
                                            Foreground="Black">
                                        </TextBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTemplateColumn>
                            <!--report_recievedate-->
                            <DataGridTemplateColumn
                                Header="Recieve date"                                  
                                MinWidth="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            Text="{Binding report_recievedate, Mode=OneWay}"
                                            MinWidth="120"
                                            IsReadOnly="true"
                                            TextWrapping="Wrap"
                                            Foreground="Black">
                                        </TextBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTemplateColumn>
                            <!--report_receivernickname-->
                            <DataGridTemplateColumn
                                Header="Receiver nickname"     
                                MinWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            IsReadOnly="true"
                                            Text="{Binding report_receivernickname, Mode=OneWay}"
                                            MinWidth="120"
                                            Foreground="Black">
                                        </TextBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTemplateColumn>
                            <!--report_receiverimage-->
                            <DataGridTemplateColumn
                                Header="Receiver image"     
                                MinWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image 
                                            Grid.Column="0"   
                                            Source="{Binding report_receiverimage, Mode=OneWay}" 
                                            Height="50" 
                                            Width="50">
                                        </Image> 
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTemplateColumn>                                                                                                                                                   
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--Delete-->
                    <Button
                        Style="{StaticResource MaterialDesignOutlinedLightButton}"            
                        Content="Delete report"    
                        IsDefault = "true"
                        IsTabStop="true"
                        Width="150"
                        Grid.Row="2"                        
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"  
                        Margin="5 5 5 5"
                        Background="Azure"  
                        Command="{Binding Path = ReportListVM.DeleteReportCommand}"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                    </Button>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>