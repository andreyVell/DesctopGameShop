<Window x:Class="DataBaseIndTask.mainWindowAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseIndTask"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        WindowState="Normal"
        Width="1600"
        Height="900"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/Start_icon.png"      
        Title="Diverse Desktop">
    <Window.Resources>        
    </Window.Resources>
    <Grid>
        <Button x:Name="buttonExitAccount" 
                Grid.Row="0" 
                Content="Exit account" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Background="Azure" 
                Height="27" 
                Width="125" 
                Panel.ZIndex="1"
                Click="buttonExitAccount_Click" 
                Grid.Column="2"/>
        <Button x:Name="buttonExport" 
                Grid.Row="0" 
                Content="Export data" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Background="Azure" 
                Height="27" 
                Width="125" 
                Margin="0 0 0 0"
                Panel.ZIndex="1"
                Command="{Binding DataExport.OpenExportWindowCommand}"
                Grid.Column="2"/>
        <Button x:Name="buttonCustomQuaryBuilder" 
                Grid.Row="0" 
                Content="Custom quary" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Background="Azure" 
                Height="27" 
                Width="125" 
                Margin="0 27 0 0"
                Panel.ZIndex="1"
                Command="{Binding CustomQuaryBuilderVM.OpenWindowCommand}"
                Grid.Column="2"/>
        <TabControl
            Style="{StaticResource MaterialDesignNavigatilRailTabControl}"            
            materialDesign:ColorZoneAssist.Mode="PrimaryMid"            
            TabStripPlacement="Top"
            Background="White" 
            HorizontalContentAlignment="Center"
            materialDesign:NavigationRailAssist.SelectionCornerRadius="10 10 10 10"
            materialDesign:NavigationRailAssist.ShowSelectionBackground="True" Grid.ColumnSpan="3">
            <!--Store-->
            <TabItem Width="150">
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="Store"
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Center" />
                        <TextBlock
                              Text="Store"
                              HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <TabControl
                        Style="{StaticResource MaterialDesignNavigatilRailTabControl}"            
                        materialDesign:ColorZoneAssist.Mode="PrimaryMid"            
                        TabStripPlacement="Top"
                        Background="White" 
                        HorizontalContentAlignment="Center"
                        materialDesign:NavigationRailAssist.SelectionCornerRadius="10 10 10 10"
                        materialDesign:NavigationRailAssist.ShowSelectionBackground="True" Grid.ColumnSpan="3">     
                        <!--All games-->
                        <TabItem Width="150">
                            <TabItem.Header>
                                <StackPanel
                                    Height="auto"
                                    Width="auto">
                                    <materialDesign:PackIcon
                                        Kind="GoogleController"
                                        Width="24"
                                        Height="24"
                                        HorizontalAlignment="Center" />
                                    <TextBlock
                                        Text="All games"
                                        HorizontalAlignment="Center" />
                                </StackPanel>
                            </TabItem.Header>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="50"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:ColorZone                                
                                    Grid.Row="0"
                                    Grid.ColumnSpan="2"
                                    Margin="0 0 0 0"
                                    CornerRadius="0 0 20 20"                                 
                                    Mode="PrimaryMid"
                                    HorizontalAlignment="Center"
                                    MinWidth="450"  
                                    materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                    Padding="5">
                                    <StackPanel                                        
                                    materialDesign:RippleAssist.IsCentered="True">
                                        <Grid>                                            
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <ComboBox
                                                x:Name="AllGameComboBox"
                                                FontSize="20"
                                                Grid.Column="0"
                                                Margin="8 0 0 0"
                                                materialDesign:ThemeAssist.Theme="Light"
                                                BorderThickness="0"
                                                ItemsSource="{Binding Path = GameListVM.VisibleSearchTypes}"
                                                SelectedIndex="{Binding Path = GameListVM.searchType}"
                                                Foreground="Black"
                                                materialDesign:ColorZoneAssist.Mode="Standard"
                                                materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesignPaper}"
                                                BorderBrush="{DynamicResource MaterialDesignPaper}" SelectionChanged="AllGameComboBox_SelectionChanged">                                                                                              
                                            </ComboBox>
                                            <materialDesign:ColorZone
                                                x:Name="AllGameTextSearch"
                                                Grid.Column="1"
                                                Grid.ColumnSpan="15"
                                                materialDesign:ThemeAssist.Theme="Light"
                                                Padding="8 4 8 4"
                                                CornerRadius="10" 
                                                Visibility="Visible"
                                                Panel.ZIndex="1"                                            
                                                Margin="15 0 15 0"                                             
                                                materialDesign:ShadowAssist.ShadowDepth="Depth1">                                                
                                                <Grid>                                                    
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <materialDesign:PackIcon
                                                        Width="25"
                                                        Height="25"
                                                        Kind="Search"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                                    <TextBox
                                                        Grid.Column="1"
                                                        FontSize="20"
                                                        Text="{Binding Path = GameListVM.filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Margin="8 0 0 0"                                                    
                                                        materialDesign:HintAssist.Hint="Search"
                                                        materialDesign:TextFieldAssist.HasClearButton="True"
                                                        BorderThickness="0"                                                      
                                                        VerticalAlignment="Center">
                                                    </TextBox>
                                                </Grid>                                                
                                            </materialDesign:ColorZone>
                                            <materialDesign:ColorZone
                                                x:Name="AllGameDateSearch"
                                                Visibility="Hidden"
                                                Grid.Column="1"
                                                Grid.ColumnSpan="15"
                                                materialDesign:ThemeAssist.Theme="Light"
                                                Padding="8 4 8 4"
                                                CornerRadius="10" 
                                                Panel.ZIndex="1"                                            
                                                Margin="15 0 15 0"                                             
                                                materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                                <Grid>                                                    
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="20" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <materialDesign:PackIcon
                                                        Grid.Column="0"
                                                        Kind="Calendar"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                                    <DatePicker                                                         
                                                        Grid.Column="1"
                                                        SelectedDate="{Binding GameListVM.dateFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Foreground="Black"                                                          
                                                        VerticalAlignment="Top"
                                                        materialDesign:HintAssist.Hint="Date">
                                                        <DatePicker.Resources>
                                                            <Style                    
                                                                x:Key="CustomCalendarDayButton"
                                                                TargetType="CalendarDayButton"
                                                                BasedOn="{StaticResource MaterialDesignCalendarDayButton}">
                                                                <Setter
                                                                    Property="materialDesign:CalendarAssist.SelectionColor"
                                                                    Value="LightSkyBlue" />
                                                                <Setter
                                                                    Property="materialDesign:CalendarAssist.SelectionForegroundColor"
                                                                    Value="Black" />
                                                            </Style>
                                                            <Style
                                                                x:Key="CustomCalendarButton"
                                                                TargetType="CalendarButton"
                                                                BasedOn="{StaticResource MaterialDesignCalendarButton}">
                                                                <Setter
                                                                    Property="materialDesign:CalendarAssist.SelectionColor"
                                                                    Value="LightSkyBlue" />
                                                                <Setter
                                                                    Property="materialDesign:CalendarAssist.SelectionForegroundColor"
                                                                    Value="Black" />
                                                            </Style>
                                                            <Style
                                                                x:Key="CustomCalendar"
                                                                TargetType="{x:Type Calendar}"
                                                                BasedOn="{StaticResource MaterialDesignDatePickerCalendarPortrait}">
                                                                <Setter
                                                                    Property="Background"
                                                                    Value="White" />
                                                                <Setter
                                                                    Property="Foreground"
                                                                    Value="Black" />
                                                                <Setter
                                                                    Property="materialDesign:CalendarAssist.HeaderBackground"
                                                                    Value="LightSkyBlue" />
                                                                <Setter
                                                                    Property="materialDesign:CalendarAssist.HeaderForeground"
                                                                    Value="Black" />
                                                                <Setter
                                                                    Property="CalendarDayButtonStyle"
                                                                    Value="{StaticResource CustomCalendarDayButton}" />
                                                                <Setter
                                                                    Property="CalendarButtonStyle"
                                                                    Value="{StaticResource CustomCalendarButton}" />
                                                            </Style>
                                                            <Style
                                                                TargetType="DatePicker"                       
                                                                BasedOn="{StaticResource MaterialDesignFloatingHintDatePicker}">
                                                                <Setter
                                                                    Property="CalendarStyle"
                                                                    Value="{StaticResource CustomCalendar}" />
                                                            </Style>
                                                            <Style
                                                                TargetType="TextBlock">
                                                                <Setter
                                                                    Property="Background"
                                                                    Value="Azure" />
                                                            </Style>
                                                        </DatePicker.Resources>
                                                    </DatePicker>
                                                </Grid>
                                            </materialDesign:ColorZone>
                                        </Grid>
                                    </StackPanel>
                                </materialDesign:ColorZone>
                                <DataGrid
                                    x:Name="GamesDataGrid"
                                    ItemsSource="{Binding Path = GameListVM.GameList}"
                                    SelectedValue="{Binding Path = GameListVM.SelectedGame}"                        
                                    CanUserAddRows="False"
                                    Background="Azure"
                                    materialDesign:ThemeAssist.Theme="Light"
                                    BorderBrush="black"
                                    Foreground="black"                        
                                    Panel.ZIndex="1"                        
                                    Height="auto"
                                    Grid.Row="1"
                                    SelectionMode="Single"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Center"
                                    AutoGenerateColumns="False" 
                                    FrozenColumnCount="2"
                                    HeadersVisibility="All">
                                    <DataGrid.Resources>
                                        <Style TargetType="ScrollBar">
                                            <Setter Property="Background" Value="LightGray" />
                                        </Style>
                                        <Style TargetType="{x:Type DataGridRow}">
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FF9CB1B3"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Style.Triggers>
                                                <Trigger Property="DataGridCell.IsSelected" Value="True">
                                                    <Setter Property="Background" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="0" />
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                </Trigger>
                                            </Style.Triggers>
                                            <Setter Property="HorizontalAlignment" Value="Center" />                                            
                                        </Style>
                                    </DataGrid.Resources>
                                    <DataGrid.Columns>
                                        <!--game_id-->
                                        <DataGridTemplateColumn
                                            Header="ID"     
                                            MinWidth="17">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>                                                    
                                                    <TextBox
                                                        IsReadOnly="true"
                                                        Text="{Binding game_id, Mode=OneWay}"                                                        
                                                        Foreground="Black">
                                                    </TextBox>                                                        
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="BorderBrush" Value="Black"/>                                                    
                                                </Style>
                                            </DataGridColumn.HeaderStyle>
                                        </DataGridTemplateColumn>
                                        <!--game_name-->
                                        <DataGridTemplateColumn
                                            Header="Name"     
                                            MinWidth="120"
                                            MaxWidth="150">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox                                                        
                                                        TextWrapping="Wrap"
                                                        MinWidth="120"
                                                        MaxWidth="150"                                                        
                                                        Text="{Binding game_name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Foreground="Black">
                                                    </TextBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridColumn.HeaderStyle>
                                        </DataGridTemplateColumn>
                                        <!--game_description-->
                                        <DataGridTemplateColumn
                                            Header="Description"                                  
                                            MinWidth="120" 
                                            MaxWidth="350">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox
                                                        Text="{Binding game_description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        MinWidth="120" 
                                                        MaxWidth="350"                                                        
                                                        TextWrapping="Wrap"
                                                        Foreground="Black">
                                                    </TextBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridColumn.HeaderStyle>
                                        </DataGridTemplateColumn>
                                        <!--game_genre-->
                                        <DataGridTemplateColumn
                                            Header="Genre"     
                                            MinWidth="120"
                                            MaxWidth="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox
                                                        Text="{Binding game_genre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        MinWidth="120"  
                                                        MaxWidth="120"
                                                        TextWrapping="Wrap"                                                        
                                                        Foreground="Black">
                                                    </TextBox>
                                                </DataTemplate>                                                
                                            </DataGridTemplateColumn.CellTemplate>                                            
                                            <DataGridColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridColumn.HeaderStyle>
                                        </DataGridTemplateColumn>
                                        <!--game_releasedate-->
                                        <DataGridTemplateColumn
                                            Header="Release date"                                 
                                            MinWidth="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <DatePicker                                                                                                                                   
                                                        SelectedDate="{Binding game_releasedate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Foreground="Black"                                                          
                                                        VerticalAlignment="Top"
                                                        materialDesign:HintAssist.Hint="Birth Date">
                                                        <DatePicker.Resources>
                                                            <Style                    
                                                                x:Key="CustomCalendarDayButton"
                                                                TargetType="CalendarDayButton"
                                                                BasedOn="{StaticResource MaterialDesignCalendarDayButton}">
                                                                <Setter
                                                                    Property="materialDesign:CalendarAssist.SelectionColor"
                                                                    Value="LightSkyBlue" />
                                                                <Setter
                                                                    Property="materialDesign:CalendarAssist.SelectionForegroundColor"
                                                                    Value="Black" />
                                                            </Style>
                                                            <Style
                                                                x:Key="CustomCalendarButton"
                                                                TargetType="CalendarButton"
                                                                BasedOn="{StaticResource MaterialDesignCalendarButton}">
                                                                <Setter
                                                                    Property="materialDesign:CalendarAssist.SelectionColor"
                                                                    Value="LightSkyBlue" />
                                                                <Setter
                                                                    Property="materialDesign:CalendarAssist.SelectionForegroundColor"
                                                                    Value="Black" />
                                                            </Style>
                                                            <Style
                                                                x:Key="CustomCalendar"
                                                                TargetType="{x:Type Calendar}"
                                                                BasedOn="{StaticResource MaterialDesignDatePickerCalendarPortrait}">
                                                                <Setter
                                                                    Property="Background"
                                                                    Value="White" />
                                                                <Setter
                                                                    Property="Foreground"
                                                                    Value="Black" />
                                                                <Setter
                                                                    Property="materialDesign:CalendarAssist.HeaderBackground"
                                                                    Value="LightSkyBlue" />
                                                                <Setter
                                                                    Property="materialDesign:CalendarAssist.HeaderForeground"
                                                                    Value="Black" />
                                                                <Setter
                                                                    Property="CalendarDayButtonStyle"
                                                                    Value="{StaticResource CustomCalendarDayButton}" />
                                                                <Setter
                                                                    Property="CalendarButtonStyle"
                                                                    Value="{StaticResource CustomCalendarButton}" />
                                                            </Style>
                                                            <Style
                                                                TargetType="DatePicker"                       
                                                                BasedOn="{StaticResource MaterialDesignFloatingHintDatePicker}">
                                                                <Setter
                                                                    Property="CalendarStyle"
                                                                    Value="{StaticResource CustomCalendar}" />
                                                            </Style>
                                                            <Style
                                                                TargetType="TextBlock">
                                                                <Setter
                                                                    Property="Background"
                                                                    Value="Azure" />
                                                            </Style>
                                                        </DatePicker.Resources>
                                                    </DatePicker>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridColumn.HeaderStyle>
                                        </DataGridTemplateColumn>
                                        <!--game_developer-->
                                        <DataGridTemplateColumn
                                            Header="Developer"     
                                            MinWidth="100"
                                            MaxWidth="150">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox
                                                        Text="{Binding game_developer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        TextWrapping="Wrap"
                                                        MinWidth="100"                                                        
                                                        MaxWidth="150"
                                                        Foreground="Black">
                                                    </TextBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridColumn.HeaderStyle>
                                        </DataGridTemplateColumn>
                                        <!--game_publisher-->
                                        <DataGridTemplateColumn
                                            Header="Publisher"     
                                            MinWidth="100"
                                            MaxWidth="150">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox
                                                        Text="{Binding game_publisher, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        MinWidth="100"
                                                        MaxWidth="150"                                                        
                                                        TextWrapping="Wrap"
                                                        Foreground="Black">
                                                    </TextBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridColumn.HeaderStyle>
                                        </DataGridTemplateColumn>
                                        <!--game_rating-->
                                        <DataGridTemplateColumn
                                            Header="Rating"     
                                            MinWidth="60"
                                            MaxWidth="60">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox                                                           
                                                        HorizontalAlignment="Center"
                                                        Text="{Binding game_rating, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Foreground="Black">
                                                    </TextBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridColumn.HeaderStyle>
                                        </DataGridTemplateColumn>
                                        <!--game_agelimit-->
                                        <DataGridTemplateColumn
                                            Header="Age limit"     
                                            MinWidth="40">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox                                                        
                                                        HorizontalAlignment="Center"
                                                        Text="{Binding game_agelimit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Foreground="Black">
                                                    </TextBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridColumn.HeaderStyle>
                                        </DataGridTemplateColumn>
                                        <!--game_image-->
                                        <DataGridTemplateColumn
                                            Header=" Game image"     
                                            MinWidth="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid HorizontalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="25"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Image 
                                                            Grid.Column="0"   
                                                            Source="{Binding game_image, Mode=OneWay}" 
                                                            Height="150" 
                                                            Width="225">
                                                        </Image>
                                                        <Button
                                                            Grid.Column="1"                                                
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryLightButton}"                          
                                                            Height="20"
                                                            Width="20"
                                                            Background="LightSkyBlue"
                                                            BorderBrush="SkyBlue"                                                 
                                                            Command="{Binding ChangeImageCommand}"
                                                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                                                            <materialDesign:PackIcon                        
                                                                Kind="ImageEditOutline"
                                                                Height="10"
                                                                Width="10" />
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridColumn.HeaderStyle>
                                        </DataGridTemplateColumn>
                                        <!--game_storeimage-->
                                        <DataGridTemplateColumn
                                            Header=" Game store image"     
                                            MinWidth="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid HorizontalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="25"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Image 
                                                            Grid.Column="0"   
                                                            Source="{Binding game_storeimage, Mode=OneWay}" 
                                                            Height="150" 
                                                            Width="225">
                                                        </Image>
                                                        <Button
                                                            Grid.Column="1"                                                
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryLightButton}"                          
                                                            Height="20"
                                                            Width="20"
                                                            Background="LightSkyBlue"
                                                            BorderBrush="SkyBlue"                                                 
                                                            Command="{Binding ChangeStoreImageCommand}"
                                                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                                                            <materialDesign:PackIcon                        
                                                                Kind="ImageEditOutline"
                                                                Height="10"
                                                                Width="10" />
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridColumn.HeaderStyle>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <!--Add-->
                                <Button
                                    Style="{StaticResource MaterialDesignOutlinedLightButton}"            
                                    Content="Add game"    
                                    IsDefault = "true"
                                    IsTabStop="true"
                                    Width="150"
                                    Grid.Row="2"                        
                                    Grid.Column="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"  
                                    Margin="5 5 5 5"
                                    Background="Azure"  
                                    Command="{Binding Path = GameListVM.AddGameCommand}"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                                </Button>
                                <!--Delete-->
                                <Button
                                    Style="{StaticResource MaterialDesignOutlinedLightButton}"            
                                    Content="Delete game"    
                                    IsDefault = "true"
                                    IsTabStop="true"
                                    Width="150"
                                    Grid.Row="2"                        
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"  
                                    Margin="5 5 5 5"
                                    Background="Azure"  
                                    Command="{Binding Path = GameListVM.DeleteGameCommand}"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                                </Button>
                            </Grid>
                        </TabItem>
                        <!--Games in store-->
                        <TabItem Width="150">
                            <TabItem.Header>
                                <StackPanel
                                    Height="auto"
                                    Width="auto">
                                    <materialDesign:PackIcon
                                        Kind="Shopping"
                                        Width="24"
                                        Height="24"
                                        HorizontalAlignment="Center" />
                                    <TextBlock
                                        Text="Games in store"
                                        HorizontalAlignment="Center" />
                                </StackPanel>                                
                            </TabItem.Header>
                            <Grid>
                                <Grid.RowDefinitions>
